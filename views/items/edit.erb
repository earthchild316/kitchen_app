<h3>Edit Item:</h3>

<div class="kitchen">
<form action="/items/<%= @item.id %>" method="post">

  <label for="item_name">Item Name:</label>
  <input type="text" name="item_name" value="<%= @item.item_name %>">

  <br>
  <br>


  <label for="ideal_stock">Ideal Stock Level:</label>
  <input type="text" name="ideal_stock" value="<%=@item.ideal_stock %>">

  <br>
  <br>

  <label for="current_stock">Current Stock Level:</label>
  <input type="number" name="current_stock" value="<%=@item.current_stock %>">

  <br>
  <br>


  <label for="category_id">Select category for Item:</label>
  <select name="category_id">
    <% @categories.each do |category| %>
    <% if category.id == @item.category_id %>
    <option selected="selected" value="<%= category.id %> "><%= category.name %></option>
    <% else %>
    <option value="<%= category.id %> "><%= category.name %></option>
    <% end %>
    <% end %>
  </select>
 
  <br>
  <br>

  <input type='submit' value="Update item">

</form>

<form action="/items/<%= @item.id %>/delete" method="post"> 
  <input type="submit" value="Delete item"></input>
</form>
</div>